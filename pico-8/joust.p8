--utility

function drawplayers()
	for i=1,count(players) do
		spr(players[i].spr, players[i].x, players[i].y)

	end
end

function reset()
	local p1 = getp1()
	local p2 = getp2()
	p1.spr = 1
	p1.x = 0
	p1.y = 63

	p2.spr = 2
	p2.x = 119
	p2.y = 63
	speed = 1
	mode = 1
end

-->8
--player

function getp1()
	return players[1]
end

function getp2()
	return players[2]
end
